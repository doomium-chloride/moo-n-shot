func shoot(ammo):
	slugs = ammo
	update_slug_visibility()

func update_slug_visibility():
	for i in range(max_slug):
		slug_list[i].visible = i + 1 <= slugs

func init_slug_position():
	for i in range(max_slug):
		slug_list[i].position.x = 100 * i
